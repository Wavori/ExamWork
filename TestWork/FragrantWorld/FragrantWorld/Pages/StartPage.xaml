<Page x:Class="FragrantWorld.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FragrantWorld.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Title="StartPage" FontFamily="Comic Sans MS">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <Label Content="Логин" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBox Name="loginTextBox" TextChanged="loginTextBox_TextChanged" Background="#00000000"/>
            <Label Content="Пароль" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBox Name="passwordTextBox" Background="#00000000"/>
            <Button  Name="loginButton" Content="Войти" Margin="2,5,2,5" Click="LoginButton_Click" Width="397"/>
            <Button x:Name="loginGuestButton" Content="Войти как гость" Click="LoginGuestButton_Click" Width="397" Margin="2,5,2,5"/>
        </StackPanel>
    </Grid>
</Page>
